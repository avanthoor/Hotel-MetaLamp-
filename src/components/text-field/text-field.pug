include __subscription/text-field__subscription.pug
include __dropdown/text-field__dropdown.pug

mixin text-field(options)
  if !options
    - options = {}

  // значени readonly записывается в переменную только в случае если указано значение 'on' иначе readonly отменятеся
  - var readonly = (options.readonly === 'on') ? 'readonly' : false

  // записывается значение title в переменную, только если активирован readonly
  - var title = (options.readonly === 'on') ? options.title : false

  // Добавление модификаторов при установлении их значений
  -
    var classes = ''
    classes += options.size ? ' text-field_size_' + options.size : ''
    classes += (options.mask === 'on') ? ' text-field_mask_' + options.mask : ''
    classes += (options.type === 'dropdown') ? ' text-field_type_dropdown': ''
  
    
  form(action="#")
    .text-field(id='dropdown')
      input.text-field__input(
        class=       classes
        type=        options.inputType 
        placeholder= options.placeholder 
        readonly=    readonly 
        value=       title
      )
      case options.type
        when 'subscription'
          +text-field__subscription
        when 'dropdown'
          +text-field__dropdown(options)


  //  - if (options.In==inputType === 'text' || options.inputType === 'email')
      input.text-field_input(
        type = options.inputType 
        placeholder = options.placeholder 
      )